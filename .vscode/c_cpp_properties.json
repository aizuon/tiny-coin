{
    "version": 4,
    "configurations": [
        {
            "name": "Win32",
            "compilerPath": "cl.exe",
            "intelliSenseMode": "windows-msvc-x64",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "__NV_NO_HOST_COMPILER_CHECK",
                "_WIN32_WINNT=0x0A00"
            ],
            "includePath": [
                "${workspaceFolder}/tiny-lib",
                "${env:CUDA_PATH}/include",
                "${env:VCPKG_ROOT}/installed/x64-windows-static/include"
            ],
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Mac",
            "compilerPath": "/usr/bin/clang++",
            "intelliSenseMode": "macos-clang-arm64",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "includePath": [
                "${workspaceFolder}/tiny-lib",
                "${env:VCPKG_ROOT}/installed/arm64-osx/include"
            ],
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Linux",
            "compilerPath": "/usr/bin/g++",
            "intelliSenseMode": "linux-gcc-x64",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "__NV_NO_HOST_COMPILER_CHECK"
            ],
            "includePath": [
                "${workspaceFolder}/tiny-lib",
                "${env:CUDA_PATH}/include",
                "${env:VCPKG_ROOT}/installed/x64-linux/include"
            ],
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ]
}